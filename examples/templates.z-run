#!/dev/null


<< templates / context
	#! {{}}
	# workspace
	{{ .workspace }}
	# fingerprint
	{{ .fingerprint }}
	
	# environment
	{{ range $key, $value := .environment -}}
	* {{ $key }}={{ $value }}
	{{ else -}}
	* <no-environment>
	{{- end }}
	# arguments
	{{ range $_, $argument := .arguments -}}
	* {{ $argument }}
	{{ else -}}
	* <no-arguments>
	{{- end -}}
!!

<< templates / context / 2
	#! {{}}
	{{- ZRUN ":: templates / context" -}}
!!

<<~~.. templates / context / 3
	#! {{}}
	{{- ZRUN ":: templates / context" }}
	
	# date
	{{ ZRUN ":: templates / input / date" -}}
!!




<< templates / callback
	#! {{}}
	{{- ZRUN ":: templates / input / date" | split "-" | join " " -}}
	{{ ZRUN ":: templates / input / json" | hex_encode | hex_decode -}}
	{{ ZRUN ":: templates / input / json" | base64_encode | base64_decode -}}
	{{ ZRUN ":: templates / input / json" | json_decode | json_encode }}
!!

<<~~.. templates / callback / replacer
	#! {{}}
	{{- ZRUN ":: templates / input / date" -}}
!!


--<< templates / input / date
	date -- '+%Y-%m-%d-%H-%M-%S'
!!

--<<.. templates / input / json
	[ 1, 2, 3 ]
!!




<<~~.. templates / fingerprint / template / compile-time
	#! {{}}
	template-compile-time: {{ ZRUN_FINGERPRINT }}
!!

<< templates / fingerprint / template / execute-time
	#! {{}}
	template-execute-time: {{ ZRUN_FINGERPRINT }}
!!

<<~~.. templates / fingerprint / script / compile-time
	printf -- 'script-compile-time: %s %s\n' "${ZRUN_FINGERPRINT}" "$( exec -- date -Iseconds )"
!!

<< templates / fingerprint / script / execute-time
	printf -- 'script-execute-time: %s %s\n' "${ZRUN_FINGERPRINT}" "$( exec -- date -Iseconds )"
!!

<<~~.. templates / fingerprint / all / compile-time
	"${ZRUN[@]}" ":: templates / fingerprint / template / compile-time"
	"${ZRUN[@]}" ":: templates / fingerprint / template / execute-time"
	"${ZRUN[@]}" ":: templates / fingerprint / script / compile-time"
	"${ZRUN[@]}" ":: templates / fingerprint / script / execute-time"
!!

<< templates / fingerprint / all / execute-time
	"${ZRUN[@]}" ":: templates / fingerprint / template / compile-time"
	"${ZRUN[@]}" ":: templates / fingerprint / template / execute-time"
	"${ZRUN[@]}" ":: templates / fingerprint / script / compile-time"
	"${ZRUN[@]}" ":: templates / fingerprint / script / execute-time"
!!

